SELECT MEMBER_NAME, REVIEW_TEXT, DATE_FORMAT(REVIEW_DATE, '%Y-%m-%d') AS REVIEW_DATE
FROM REST_REVIEW R
INNER JOIN MEMBER_PROFILE P
ON R.MEMBER_ID = P.MEMBER_ID
-- 리뷰를 가장 많이 작성한 회원
WHERE R.MEMBER_ID = (
    SELECT MEMBER_ID
    FROM REST_REVIEW
    GROUP BY MEMBER_ID
    ORDER BY COUNT(REVIEW_SCORE) DESC
    LIMIT 1)
ORDER BY REVIEW_DATE, REVIEW_TEXT;
