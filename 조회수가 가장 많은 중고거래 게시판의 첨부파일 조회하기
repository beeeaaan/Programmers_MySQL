SELECT CONCAT('/home/grep/src/', FILE.BOARD_ID, '/', FILE_ID, FILE_NAME, FILE_EXT) AS FILE_PATH  # 기본적인 파일 경로
FROM USED_GOODS_FILE AS FILE
LEFT JOIN USED_GOODS_BOARD AS BOARD
ON FILE.BOARD_ID = BOARD.BOARD_ID  # 게시글 ID기준으로 디렉토리 구분
WHERE VIEWS = (SELECT MAX(VIEWS) FROM USED_GOODS_BOARD)  # 조회수 가장 높은 게시물
ORDER BY FILE_ID DESC;
