SELECT AP.APNT_NO, P.PT_NAME, AP.PT_NO, AP.MCDP_CD, D.DR_NAME, AP.APNT_YMD
FROM APPOINTMENT AP 
JOIN DOCTOR D ON D.DR_ID = AP.MDDR_ID  -- 의사 정보
JOIN PATIENT P ON P.PT_NO = AP.PT_NO  -- 환자 정보
WHERE AP.APNT_CNCL_YMD IS NULL AND AP.MCDP_CD = 'CS' AND AP.APNT_YMD LIKE '2022-04-13%'  -- 2022년 4월 13일 취소되지 않은 흉부외과
ORDER BY AP.APNT_YMD;
