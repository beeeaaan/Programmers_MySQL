SELECT P.PRODUCT_CODE, SUM(P.PRICE * O.SALES_AMOUNT) AS SALES
FROM PRODUCT P 
JOIN OFFLINE_SALE O ON P.PRODUCT_ID = O.PRODUCT_ID  // 각 테이블 별 PRODUCT_ID 같은 것만 묶기
GROUP BY P.PRODUCT_CODE
ORDER BY SALES DESC, P.PRODUCT_CODE;

